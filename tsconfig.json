{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "types": ["lua-types/5.2", "lpp-vita-definitions"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "out-src",
    "esModuleInterop": true
  },
  "tstl": {
    "luaTarget": "5.2",
    "noHeader": true,
    "luaBundleEntry": "src/index.ts",
    "luaBundle": "out-src/index.lua"
  },
  "exclude": ["node_modules", "gulpfile.ts"]
}
